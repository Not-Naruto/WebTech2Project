<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/@coreui/coreui@4.3.0/dist/css/coreui.min.css" rel="stylesheet"
        integrity="sha384-2E9/b2fZ+VJoP6eRIpzzMFkuqbh0qDkIFVLzJJwkESsdKPEwzb0n6E55enZ+Ee8V" crossorigin="anonymous">
    <title>Fuel Station - Record Delivery</title>
    <style>
        .navbar-brand {
            font-family: 'Arial', sans-serif;
            /* Change the font family as needed */
            font-size: 24px;
            /* Adjust the font size as needed */
            font-weight: bold;
            color: #333;
            /* Change the color as needed */
        }

        .navbar-text {
            font-size: 14px;
            /* Adjust the font size as needed */
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>

    <script>
        function validateSubmit() {
            let pre = document.getElementById("premiumFuel")
            let sup = document.getElementById("superFuel")
            if (pre.value < 0 || sup.value < 0) {
                document.getElementById('error').style.display = 'block'
                return false
            } else {
                document.getElementById('error').style.display = 'none'
                return true
            }
        }
    </script>
</head>

<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show d-flex align-items-center">

    <div class="container">
        <header class="app-header navbar">
            <button class="navbar-toggler sidebar-toggler d-lg-none mr-auto" type="button" data-toggle="sidebar-show">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand">
                <span style="color: #007BFF;">Fuel</span> Station
            </a>
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item">
                    <span class="navbar-text mr-3">
                        Manager: <strong>{{manager.Name}}</strong> | Station ID:
                        <strong>{{station.StationID}}</strong>
                    </span>
                </li>
            </ul>
        </header>

        <div class="app-body">
            <main class="main">
                <div class="animated fadeIn d-flex align-items-center justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <strong>Record Sales</strong>
                            </div>
                            <div class="card-body">
                                <form method="post" onsubmit="return validateSubmit()">
                                    <div class="form-group">
                                        <label for="premiumFuel">Premium Fuel Quantity:</label>
                                        <input type="number" class="form-control" id="premiumFuel" name="premiumFuel"
                                            placeholder="Enter quantity" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="superFuel">Super Fuel Quantity:</label>
                                        <input type="number" class="form-control" id="superFuel" name="superFuel"
                                            placeholder="Enter quantity" required>
                                    </div>
                                    <input type="hidden" name="managerId" value="{{manager.UserID}}">
                                    <input type="submit" class="btn btn-primary" value="Record Delivery"
                                        onclick="validateSubmit()">
                                </form>
                            </div>
                        </div>
                        <div id="error" class="alert alert-danger alert fade show my-3" role="alert"
                            style="display: none;">
                            <strong>Alert:</strong> Invalid Values
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

</body>

</html>