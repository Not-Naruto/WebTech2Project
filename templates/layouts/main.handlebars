<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>AFM Petrol</title>
  <link rel="stylesheet" href="/static/css/reset.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/coreui/3.0.0-beta.1/css/coreui.min.css" />
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <style>
    .body {
      height: 100%;
      min-height: 94vh;
    }

    #logo {
      height: 70px;
      margin-right: 30px;
    }

    .grid {
      display: grid;
      grid-template-columns: 2fr 10fr;
    }

    .material-symbols-outlined {
      font-variation-settings: 'FILL' 1,
        'wght' 400, 'GRAD' 0, 'opsz' 24
    }
  </style>

</head>

<body class="c-app">

  <nav class="navbar navbar-expand-lg bg-black">
    <div class="container-fluid">
      <img src="/static/img/white_logo.png" id="logo" alt="Logo" />
      <button class="navbar-toggler" type="button" data-coreui-toggle="collapse"
        data-coreui-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active text-white" aria-current="page" href="#">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white" href="#">Link</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-coreui-toggle="dropdown"
              aria-expanded="false">
              Dropdown
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Action</a></li>
              <li><a class="dropdown-item" href="#">Another action</a></li>
              <li>
                <hr class="dropdown-divider" />
              </li>
              <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled text-white" aria-disabled="true">Disabled</a>
          </li>
        </ul>

      </div>
      <a href="#" type="button" class="btn btn-danger text-light d-flex justify-content-center fs-6 fw-bolder">
        <span class="material-symbols-outlined" style="margin-right: 10px;">
          logout
        </span>
        Logout
      </a>


    </div>
  </nav>

  <div class="grid">
    <div class="sidebar w-100 ">

      <ul class="sidebar-nav" style="background-color: #33415C;">
        <li class="nav-item fw-bolder mx-4 my-3 fs-5">
          QUICK-LINKS
        </li>
        <li class="nav-item">

          <a class="nav-link fs-4" href="#">
            <span class="material-symbols-outlined mx-3">
              home
            </span>
            Home
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link fs-5" href="#">
            <span class="material-symbols-outlined mx-3">
              local_gas_station
            </span>
            Stations
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link fs-5" href="#">
            <span class="material-symbols-outlined mx-3">
              manage_accounts
            </span>
            Account Info
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link fs-5" href="#">
            <span class="material-symbols-outlined mx-3">
              mail
            </span>
            Contact Us
          </a>
        </li>

      </ul>
    </div>
    <div class="body p-0">
      <div>
        {{{body}}}
      </div>
    </div>
  </div>

  <!-- CoreUI JS dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/@coreui/coreui@4.3.0/dist/js/coreui.bundle.min.js"
    integrity="sha384-Iqk8EE7ao72xAVBuuQTEwrU5N2IdvpJER5ZzM6LxwcXHqj2WstttaOvopXziv0nU"
    crossorigin="anonymous"></script>

</body>

</html>